<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.login.LoginMainController">


   <children>
      <Label layoutX="320.0" layoutY="60.0" prefHeight="34.0" prefWidth="160.0" text="LOGIN ">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="48.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.5568181818181818" centerY="0.5194174757281553" radius="0.5">
               <stops>
                  <Stop color="#51bed7" />
                  <Stop color="#1a569a" offset="1.0" />
               </stops>
            </RadialGradient>
         </textFill>
      </Label>
      <Label layoutX="84.0" layoutY="196.0" prefHeight="32.0" prefWidth="202.0" text="USERNAME :" textFill="#5b0909">
         <font>
            <Font name="Cambria" size="36.0" />
         </font>
      </Label>
      <Label layoutX="84.0" layoutY="300.0" prefHeight="32.0" prefWidth="202.0" text="PASSWORD :" textFill="#540c0c">
         <font>
            <Font name="Cambria" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="316.0" layoutY="196.0" prefHeight="44.0" prefWidth="309.0" promptText="Enter Username" />
