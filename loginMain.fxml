      <Button fx:id="okBtn" layoutX="601.0" layoutY="486.0" mnemonicParsing="false" onAction="#handleOkBtnOnAction" prefHeight="50.0" prefWidth="136.0" text="Admin" />
      <Button fx:id="LoginBtn" layoutX="564.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleLoginBtn" prefHeight="34.0" prefWidth="61.0" text="Login" />

   </children>
